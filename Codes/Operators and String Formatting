number = 1 + 2 * 3 / 4.0
print(number)

remainder = 11 % 3
print(remainder)

squared = 7 ** 2
cubed = 2 ** 3
print(squared)
print(cubed)

lotsofhellos = "hello" * 10
print(lotsofhellos)

print([1,2,3] * 3)

# Create two lists, add them together, and output the sum.

EvenNumbers = [0, 2, 4, 6, 8]
OddNumbers = [1, 3, 5, 7, 9]
Sum = OddNumbers + EvenNumbers
print(Sum)

# Here are some basic argument specifiers you should know:

# %s - String (or any object with a string representation, like numbers)
#
# %d - Integers
#
# %f - Floating point numbers
#
# %.<number of digits>f - Floating point numbers with a fixed amount of digits to the right of the dot.
#
# %x/%X - Integers in hex representation (lowercase/uppercase)

name = "John"
age = 23
print("%s is %d years old." % (name, age))

mylist = [1, 2, 3]
print("A list: %s" % mylist)

# Format a string of your own.

Mate = "Jacob"
Goals = 86
BonusEarned = 1000000
print("%s scored %d goals, and earned himself a whopping $%d to his already massive salary!"
      % (Mate, Goals, BonusEarned))
